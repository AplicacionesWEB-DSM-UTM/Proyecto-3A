@model IEnumerable<CruceDTO>
@{
    ViewBag.Title = "Cruces";
    Layout ="~/Views/Template/_adminLayout.cshtml";
}
                <div class="col mx-3">
                    <div class="row">
                        <div class="col mx-3 bg-dark">
                            <h3 class="text-center fw-bold pt-5 bg-dark text-white">@ViewData["Title"]</h3>
                            <div class="container-fluid align-content-end">
                                <form action="#">
                                    <div class="text-left">
                                        <a class="btn btn-success my-3" asp-controller="Cruces" asp-action="New">Nuevo</a>
                                    </div>
                                    <table class="table table-light table-striped text-center">
                                        <tr>
                                            <th>#</th>
                                            <th>Nombre</th>
                                            <th>Macho</th>
                                            <th>Hembra</th>
                                            <th>Datos del Cruce</th>
                                            <th></th>
                                        </tr>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.id</td>
                                            <td>@item.nombre</td>
                                            <td>@item.id_macho</td>
                                            <td>@item.id_hembra</td>
                                            <td class="text-left">
                                                <p>Fecha de Emparejamiento: @item.fecha_emp</p>
                                                <p>Fecha de Nacimiento: @item.fecha_nac</p>
                                                <p>Ejemplares Nacidos: @item.ejemplares_nac</p>
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a class="btn btn-secondary my-2" asp-controller="Cruces" asp-action="Details">Detalles</a>
                                                    <a class="btn btn-primary my-2" asp-controller="Cruces" asp-action="Edit">Modificar</a>
                                                    <a class="btn btn-danger my-2" asp-controller="Cruces" asp-action="Delete">Eliminar</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
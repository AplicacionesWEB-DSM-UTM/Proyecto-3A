@model kaninos.Models.EjemplarDTO
@{
    ViewBag.Title = "Nuevo";
    Layout ="~/Views/Template/_EjemplaresLayout.cshtml";
    var ejemplar = $"~/image/not-found.png";
}
                <div class="col mx-3">
                    <form action="" method="post">
                        <div class="container">
                            <b class="text-info">@ViewBag.Message</b>
                        </div>
                        <div class="row">
                            <div class="col-7 mx-3 bg-dark text-white-50">
                                <h3 class="text-center fw-bold py-5 bg-dark text-white">Ejemplares</h3>
                                <div class="mb-4">
                                    <label for="nombre" class="form-label">Nombre</label>
                                    <input type="text" class="form-control" asp-for="nombre" maxlength="50">
                                </div>
                                <div class="row mb-4">
                                    <div class="col-6">
                                        <input class="form-control me-2" type="search" asp-for="padre" placeholder="Padre" aria-label="Search">
                                    </div>
                                    <div class="col-6">
                                        <input class="form-control me-2" type="search" asp-for="madre" placeholder="Madre" aria-label="Search">
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-6">
                                        <label for="edad" class="form-label">Edad</label>
                                        <input type="number" class="form-control" asp-for="edad" min="0" max="20" value="0">
                                    </div>
                                    <div class="col-6">
                                        <br>
                                        <select class="form-control mt-2" aria-label="raza" asp-for="id_raza">
                                            <option selected>Raza</option>
                                            <option value="1">Husky</option>
                                            <option value="2">Golden Retriever</option>
                                            <option value="3">Collie</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <input class="form-control me-2" type="search" asp-for="id_criador" placeholder="Criador" aria-label="Search">
                                </div>
                                <div class="row mb-4">
                                    <div class="col-6">
                                        <select class="form-control" aria-label="variedad" asp-for="id_variedad">
                                            <option selected>Variedad</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                        </select>
                                    </div>
                                    <div class="col-6">
                                        <select class="form-control" aria-label="color" asp-for="id_color">
                                            <option selected>Color</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <label for="descripcion" class="form-label">Descripci√≥n</label>
                                    <textarea class="form-control" placeholder="Descripcion" asp-for="descripcion" maxlength="500"></textarea>
                                </div>
                            </div>
                            <div class="col mx-3 bg-dark text-white-50">
                                <h3 class="text-center fw-bold py-5 text-white">Imagenes</h3>
                                <div class="form-group">
                                    <label for="foto_ejemplar" class="form-label">Foto ejemplar</label>
                                    <img class="img-fluid rounded mx-auto d-block" src="~/image/not-found.png" alt="Foto Ejemplar" for="foto_ejemplar">
                                    <input class="form-control-file" type="file" asp-for="foto_ejemplar" value="image/png,image/jpeg">
                                    <span class="text-danger" for="foto_ejemplar"></span>
                                </div>
                            </div>
                        </div>
                        <div class="my-4 text-right">
                            <input class="btn btn-light ml-2 mr-2" type="reset" value="Restablecer">
                            <input class="btn btn-success ml-2 mr-2" type="submit" value="Registar">
                            <a class="btn btn-danger ml-2" asp-controller="Cruces" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
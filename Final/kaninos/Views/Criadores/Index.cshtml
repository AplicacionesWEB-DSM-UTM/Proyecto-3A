@model IEnumerable<CriadorDTO>
@{
    ViewBag.Title = "Criadores";
    Layout ="~/Views/Template/_adminLayout.cshtml";
}
                <div class="col mx-3">
                    <div class="row">
                        <div class="col mx-3 bg-dark">
                            <h3 class="text-center fw-bold pt-5 text-white">@ViewData["Title"]</h3>
                            <div class="container-fluid align-content-end">
                                <form action="#">
                                    <div class="text-left">
                                        <a class="btn btn-success my-3" asp-controller="Criadores" asp-action="New">Nuevo</a>
                                    </div>
                                    <table class="table table-light table-striped text-center">
                                        <tr>
                                            <th>#</th>
                                            <th>Criador</th>
                                            <th>Foto</th>
                                            <th>Logo</th>
                                            <th>Datos del criador</th>
                                            <th></th>
                                        </tr>
                                    @foreach (var item in Model)
                                    {
                                        var fotoPath = $"~/image/usr/{(@item.fotografia ?? "not-found.png")}";
                                        var logoPath = $"~/image/usr/{(@item.logotipo ?? "not-found.png")}";
                                        <tr>
                                            <td>@item.id_criador</td>
                                            <td>@item.nombre</td>
                                            <td>
                                                <div class="container">
                                                    <img src="@fotoPath" alt="@item.nombre" class="img-fluid img-arbol" asp-append-version="true" id="fotografia" name="fotografia"></img>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="container">
                                                    <img src="@logoPath" alt="Logotipo" class="img-fluid img-arbol" asp-append-version="true" id="fotografia" name="fotografia"></img>
                                                </div>
                                            </td>
                                            <td class="text-left">
                                                <p>Email: @item.email</p>
                                                <p>direcci√≥n: @item.direccion</p>
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    <a class="btn btn-secondary my-2" asp-controller="Criadores" asp-action="Details" asp-route-id="@item.id_criador">Detalles</a>
                                                    <a class="btn btn-primary my-2" asp-controller="Criadores" asp-action="Edit" asp-route-id="@item.id_criador">Modificar</a>
                                                    <a class="btn btn-danger my-2" asp-controller="Criadores" asp-action="Delete" asp-route-id="@item.id_criador">Eliminar</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
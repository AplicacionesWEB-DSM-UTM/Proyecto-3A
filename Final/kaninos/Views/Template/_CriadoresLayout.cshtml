<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Criadores</title>
    <link rel="shortcut icon" href="~/image/Kninos.png" type="image/png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <header class="Header-admin">   
        <div class="container-expand-lg">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img class="logo img-fluid rounded" src="~/image/Kninos.png" alt="Kninos">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto mb-2">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Noticias">Ultimas Noticias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Login">Iniciar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <main class="mb-2">
        <div class="container-fluid my-4">
            <div class="row">
                <div class="col-3 mx-3">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
                        <div class="container">
                            <div class="navbar">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Criadores" asp-action="Index">Criadores</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="#">@ViewData["Title"]</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <nav class="navbar navbar-dark bg-dark my-5">
                        <div class="container">
                            <div class="navbar">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Criadores" asp-action="Index">Criadores</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Ejemplares" asp-action="Index">Ejemplares</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Cruces" asp-action="Index">Cruces</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="ArbolGen" asp-action="Index">Árbol genealógico</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
                @RenderBody()
            </div>
        </div>
    </main>
    <footer class="border-top footer text-white">
        <div class="container">
            &copy; 2021 - kaninos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>